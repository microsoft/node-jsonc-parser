{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Unit Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": [
				"./lib/umd/test",
				"--timeout",
				"999999",
				"--colors"
			],
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": null,
			"runtimeArgs": [],
			"env": {},
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/lib/umd/**/*.js"],
			"preLaunchTask": "npm: watch"
		}
	]
}