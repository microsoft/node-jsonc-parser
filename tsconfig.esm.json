{
	"include": ["src"],
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node16",
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
		"outDir": "./lib/esm",
		"rootDir": "./src",
		"strict": true,
		"preserveConstEnums": true,
		"lib": [
			"es2020"
		]
	}
}
