
{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "no-unused-expressions": "warn",
        "no-duplicate-imports": "warn",
        "new-parens": "warn"
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "plugins": [
                "@typescript-eslint"
            ],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "@typescript-eslint/naming-convention": [
                    "warn",
                    {
                        "selector": "typeLike",
                        "format": [
                            "PascalCase"
                        ]
                    }
                ]
            }
        }
    ]
}
